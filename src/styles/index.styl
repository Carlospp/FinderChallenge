@import "blocks/*"

#btn_buscar[disabled]
    color #fff
    background #ccc
    border 1px solid #ccc
#btn_buscar
    color #fff
    background blue
    border 1px solid blue
    border-radius 5px
    padding 3px 15px
    text-decoration none
    margin-left 5px
.disabled
    background #ccc !important
    border 1px solid #ccc !important
    color #fff
.barra_vertical
    padding 10px
    position fixed
    width 270px
    height 580px
.mostrar
    display none
th
    text-align left
td
    padding 1px
    // height 56px
